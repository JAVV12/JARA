<!-- SVG representation of a peaceful Colombian countryside -->
<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#7DAFC2;stop-opacity:0.9" />
      <stop offset="50%" style="stop-color:#A8DADC;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#E9C46A;stop-opacity:0.7" />
    </linearGradient>
    <radialGradient id="sunGlow" cx="80%" cy="20%" r="30%">
      <stop offset="0%" style="stop-color:#F4A261;stop-opacity:0.4" />
      <stop offset="100%" style="stop-color:#E9C46A;stop-opacity:0.2" />
    </radialGradient>
  </defs>

  <!-- Peaceful sky -->
  <rect width="1920" height="1080" fill="url(#skyGradient)"/>

  <!-- Soft sun glow -->
  <circle cx="1536" cy="216" r="150" fill="url(#sunGlow)" opacity="0.4"/>

  <!-- Gentle mountains in background -->
  <path d="M0 700 L300 550 L600 600 L900 520 L1200 580 L1500 560 L1800 600 L1920 580 L1920 1080 L0 1080 Z"
        fill="#264653" opacity="0.7"/>
  <path d="M0 750 L400 600 L800 650 L1200 580 L1600 620 L1920 640 L1920 1080 L0 1080 Z"
        fill="#2A9D8F" opacity="0.5"/>

  <!-- Peaceful football field (center) -->
  <rect x="720" y="520" width="480" height="280" fill="#9DB8A0" stroke="#1F5F43" stroke-width="2"/>
  <!-- Field lines -->
  <line x1="720" y1="660" x2="1200" y2="660" stroke="#1F5F43" stroke-width="2"/>
  <circle cx="960" cy="660" r="40" fill="none" stroke="#1F5F43" stroke-width="2"/>
  <rect x="950" y="640" width="20" height="40" fill="#1F5F43"/>
  <!-- Goal posts (simple) -->
  <rect x="710" y="640" width="10" height="40" fill="#F7F3E9"/>
  <rect x="1200" y="640" width="10" height="40" fill="#F7F3E9"/>

  <!-- Rustic Colombian house (left side) -->
  <rect x="200" y="470" width="280" height="180" fill="#7A5A3A" stroke="#5D4E37" stroke-width="2"/>
  <!-- Traditional clay roof -->
  <path d="M180 470 L380 380 L580 470 Z" fill="#8B4513"/>
  <!-- Windows with warm light -->
  <rect x="240" y="510" width="35" height="35" fill="#F4A261" opacity="0.7"/>
  <rect x="320" y="510" width="35" height="35" fill="#F4A261" opacity="0.7"/>
  <!-- Door -->
  <rect x="280" y="550" width="40" height="80" fill="#5D4E37"/>

  <!-- Peaceful trees -->
  <circle cx="120" cy="420" r="25" fill="#1F5F43"/>
  <circle cx="110" cy="400" r="20" fill="#22C55E"/>
  <rect x="115" y="445" width="8" height="40" fill="#7A5A3A"/>

  <circle cx="520" cy="440" r="22" fill="#1F5F43"/>
  <circle cx="510" cy="420" r="18" fill="#22C55E"/>
  <rect x="515" y="462" width="7" height="35" fill="#7A5A3A"/>

  <!-- Wildflowers and grass -->
  <circle cx="80" cy="780" r="2" fill="#F4A261"/>
  <circle cx="100" cy="785" r="2" fill="#E9C46A"/>
  <circle cx="120" cy="775" r="2" fill="#F4A261"/>
  <circle cx="140" cy="790" r="2" fill="#A8DADC"/>
  <circle cx="160" cy="780" r="2" fill="#F4A261"/>

  <!-- Gentle mist -->
  <ellipse cx="400" cy="350" rx="180" ry="40" fill="#FFFFFF" opacity="0.08"/>
  <ellipse cx="1400" cy="450" rx="120" ry="30" fill="#FFFFFF" opacity="0.06"/>
  <ellipse cx="900" cy="280" rx="80" ry="25" fill="#FFFFFF" opacity="0.04"/>

  <!-- Butterflies (subtle) -->
  <path d="M 600 300 Q 610 290 620 300 Q 610 310 600 300 Z" fill="#F4A261" opacity="0.3"/>
  <path d="M 650 320 Q 660 310 670 320 Q 660 330 650 320 Z" fill="#E9C46A" opacity="0.3"/>
</svg>