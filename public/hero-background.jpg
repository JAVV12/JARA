<!-- SVG representation of a dopamine-inducing landscape -->
<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FF0080;stop-opacity:0.8" />
      <stop offset="25%" style="stop-color:#FF6B35;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#06B6D4;stop-opacity:0.8" />
      <stop offset="75%" style="stop-color:#FF0080;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#F72585;stop-opacity:0.8" />
    </linearGradient>
    <radialGradient id="sunGlow" cx="30%" cy="20%" r="50%">
      <stop offset="0%" style="stop-color:#FFFF00;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#FF6B35;stop-opacity:0.2" />
    </radialGradient>
  </defs>

  <!-- Sky with animated gradient -->
  <rect width="1920" height="1080" fill="url(#skyGradient)">
    <animateTransform
      attributeName="gradientTransform"
      type="rotate"
      values="0 960 540; 360 960 540"
      dur="20s"
      repeatCount="indefinite"/>
  </rect>

  <!-- Sun glow -->
  <circle cx="576" cy="216" r="200" fill="url(#sunGlow)" opacity="0.3">
    <animate attributeName="opacity" values="0.3;0.6;0.3" dur="4s" repeatCount="indefinite"/>
  </circle>

  <!-- Mountains in background -->
  <path d="M0 600 L400 400 L800 500 L1200 350 L1600 450 L1920 400 L1920 1080 L0 1080 Z"
        fill="#1F5F43" opacity="0.8"/>
  <path d="M0 700 L300 500 L600 550 L900 450 L1200 500 L1500 480 L1800 520 L1920 500 L1920 1080 L0 1080 Z"
        fill="#22C55E" opacity="0.6"/>

  <!-- Football field (center) -->
  <rect x="720" y="500" width="480" height="300" fill="#22C55E" stroke="#84CC16" stroke-width="4"/>
  <!-- Field lines -->
  <line x1="720" y1="650" x2="1200" y2="650" stroke="#84CC16" stroke-width="3"/>
  <circle cx="960" cy="650" r="50" fill="none" stroke="#84CC16" stroke-width="3"/>
  <rect x="940" y="620" width="40" height="60" fill="#84CC16"/>
  <!-- Goal posts -->
  <rect x="700" y="620" width="20" height="60" fill="#FFFFFF"/>
  <rect x="1200" y="620" width="20" height="60" fill="#FFFFFF"/>

  <!-- Rustic house (left side) -->
  <rect x="200" y="450" width="300" height="200" fill="#8B4513" stroke="#654321" stroke-width="3"/>
  <!-- Roof -->
  <path d="M170 450 L350 350 L530 450 Z" fill="#8B0000"/>
  <!-- Windows with warm light -->
  <rect x="250" y="500" width="40" height="40" fill="#FFFF99" opacity="0.8">
    <animate attributeName="opacity" values="0.8;1;0.8" dur="3s" repeatCount="indefinite"/>
  </rect>
  <rect x="350" y="500" width="40" height="40" fill="#FFFF99" opacity="0.8">
    <animate attributeName="opacity" values="0.8;1;0.8" dur="3s" repeatCount="indefinite"/>
  </rect>
  <!-- Door -->
  <rect x="290" y="550" width="50" height="100" fill="#654321"/>

  <!-- Trees and nature -->
  <circle cx="150" cy="400" r="30" fill="#228B22"/>
  <circle cx="140" cy="380" r="25" fill="#32CD32"/>
  <rect x="145" y="430" width="10" height="50" fill="#8B4513"/>

  <circle cx="550" cy="420" r="25" fill="#228B22"/>
  <circle cx="540" cy="400" r="20" fill="#32CD32"/>
  <rect x="545" y="445" width="8" height="40" fill="#8B4513"/>

  <!-- Flowers and grass details -->
  <circle cx="100" cy="750" r="3" fill="#FF69B4"/>
  <circle cx="120" cy="760" r="3" fill="#FF1493"/>
  <circle cx="140" cy="745" r="3" fill="#FF69B4"/>

  <!-- Atmospheric mist -->
  <ellipse cx="300" cy="300" rx="200" ry="50" fill="#FFFFFF" opacity="0.1"/>
  <ellipse cx="1600" cy="400" rx="150" ry="40" fill="#FFFFFF" opacity="0.08"/>
  <ellipse cx="800" cy="200" rx="100" ry="30" fill="#FFFFFF" opacity="0.05"/>
</svg>